<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header class="header">
    <h1 class="logo">
      <a href="#">BLOG</a>
    </h1>
      <nav class="global-nav">
        <% if user_signed_in? %>
      <ul>
        <li class="nav-item"><%= link_to "LogOut", destroy_user_session_path, class: 'button', method: :delete %>
        </li>
        <li class="nav-item"><a class="button" href="posts/new">New</a></li>
      </ul>
      <% else %>
      <ul>
        <li class="nav-item"><%= link_to "LogIn", new_user_session_path, class: 'button' %></li>
        <li class="nav-item"><%= link_to "SignIn", new_user_registration_path, class: 'button' %></li>
      </ul>
      <% end %>
    </nav>
  </header>
    <%= yield %>
  </body>
</html>
